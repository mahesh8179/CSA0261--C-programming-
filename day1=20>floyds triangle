#include <stdio.h>

int main() {
   int rows, num = 1, c, d;

   printf("Enter the number of rows you want to print: ");
   scanf("%d", &rows);

   printf("Floyd's Triangle of %d rows:\n", rows);

   for (c = 1; c <= rows; c++) {
      for (d = 1; d <= c; d++) {
         printf("%d ", num);
         num++;
      }
      printf("\n");
   }

   return 0;
}
